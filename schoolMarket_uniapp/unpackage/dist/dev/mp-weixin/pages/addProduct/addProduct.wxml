<view class="container"><view class="c-list"><view class="imagePart"><block wx:if="{{hasAddImage==false}}"><image class="image-def" src="../../static/photo.png" mode="aspectFit" data-event-opts="{{[['tap',[['ChooseImage',['$event']]]]]}}" bindtap="__e"></image><text class="tit mid">添加照片</text></block><block wx:if="{{hasAddImage==true}}"><image src="{{addData.img_url}}" mode="widthFix"></image></block></view><view class="productPart"><view class="c-row"><text class="tit">宝贝名称</text><view class="bz-list con"><input placeholder="添加名称" data-event-opts="{{[['input',[['__set_model',['$0','productname','$event',[]],['addData']]]]]}}" value="{{addData.productname}}" bindinput="__e"/></view></view><view class="c-row"><text class="tit">宝贝描述</text><view class="bz-list con"><textarea placeholder="在这里详细描述一下宝贝的转手原因、入手渠道、规格尺寸、新旧程度和使用感受吧~" data-event-opts="{{[['input',[['__set_model',['$0','detail','$event',[]],['addData']]]]]}}" value="{{addData.detail}}" bindinput="__e"></textarea></view></view></view><view class="yt-list"><view class="yt-list-cell b-b"><text class="cell-tit clamp">分类</text><view class="cell-tip"><input placeholder="添加分类" data-event-opts="{{[['input',[['__set_model',['$0','type','$event',[]],['addData']]]]]}}" value="{{addData.type}}" bindinput="__e"/></view></view><view class="yt-list-cell b-b"><text class="cell-tit clamp">价格</text><view class="cell-tip red"><input placeholder="设置价格" data-event-opts="{{[['input',[['__set_model',['$0','price','$event',[]],['addData']]]]]}}" value="{{addData.price}}" bindinput="__e"/></view></view></view></view><view class="subPart"><button class="subBtn" form-type="submit" hover-class="subBtnPrs" data-event-opts="{{[['tap',[['submitProduct',['$event']]]]]}}" bindtap="__e">发布</button></view></view>